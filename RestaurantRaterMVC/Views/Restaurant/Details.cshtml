@model RestaurantRaterMVC.Models.Restaurant

@{
    ViewBag.Title = "Details";
}

<h2>Restaurant Info</h2>

<div class="form-horizontal">
    <hr />

    <div class="form-group">
        <fieldset>
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2", @for = "readOnlyInput" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @id = "readOnlyInput", @type = "text", @readonly = "" } })
            </div>
        </fieldset>
    </div>

    <div class="form-group">
        <fieldset>
            @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label col-md-2", @for = "readOnlyInput" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", @id = "readOnlyInput", @type = "text", @readonly = "" } })
            </div>
        </fieldset>
    </div>

    <div class="form-group">
        <fieldset>
            @Html.LabelFor(model => model.Rating, htmlAttributes: new { @class = "control-label col-md-2", @for = "readOnlyInput" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Rating, new { htmlAttributes = new { @class = "form-control", @id = "readOnlyInput", @type = "text", @readonly = "" } })
            </div>
        </fieldset>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="btn btn-default col-md-1" style="display: inline-block">@Html.ActionLink("Update", "Edit")</div>
            <div class="btn btn-default col-md-2" style="display: inline-block">@Html.ActionLink("Back to List", "Index")</div>
        </div>
    }
</div>
