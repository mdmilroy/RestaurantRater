@model RestaurantRaterMVC.Models.Restaurant

@{
    ViewBag.Title = "Create";
}

<h2>Create a Rating</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-Horizontal">
        <h4>New Restaurant</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" }) <!-- If a bad request is returned, this will show the validation errors; true avoids those errors that appear elsewhere -->
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" }) <!-- This adds the unused 2 of the grid in order to take up entire row on page -->
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label col-md-2" }) <!-- This adds the unused 2 of the grid in order to take up entire row on page -->
            <div class="col-md-10">
                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Rating, htmlAttributes: new { @class = "control-label col-md-2" }) <!-- This adds the unused 2 of the grid in order to take up entire row on page -->
            <div class="col-md-10">
                @Html.EditorFor(model => model.Rating, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Rating, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit Rating" class="btn btn-dark" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>